{
  "name": "matrix-puppet-steam",
  "version": "0.0.0",
  "description": "Puppeting Matrix bridge for Steam accounts",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ace13/matrix-puppet-steam.git"
  },
  "keywords": [
    "matrix",
    "steam",
    "puppet",
    "bridge",
    "appservice"
  ],
  "author": "Alexander Olofsson",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/ace13/matrix-puppet-steam/issues"
  },
  "homepage": "https://github.com/ace13/matrix-puppet-steam#readme",
  "dependencies": {
    "matrix-puppet-bridge": "^1.9.1",
    "steam-user": "^3.19.1"
  },
  "devDependencies": {
    "eslint": "^3.12.2"
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "node": true
    },
    "extends": "eslint:recommended",
    "rules": {
      "no-console": 0,
      "indent": [
        "error",
        2,
        {
          "SwitchCase": 1
        }
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "semi": [
        "error",
        "always"
      ],
      "no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_"
        }
      ]
    }
  }
}
